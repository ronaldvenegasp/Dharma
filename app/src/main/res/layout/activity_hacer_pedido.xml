<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.personal.dharma.HacerPedido"
    android:background="#FCCFA8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#F8A955"
        android:padding="25dp"
        android:password="false"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView4"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HACER PEDIDO"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#F79730"
        android:padding="25dp"
        android:elegantTextHeight="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/hacer_pedido"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:padding="0dp"
        android:scaleType="center"
        android:src="@drawable/boton_ayuda"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendados y\nlistos"
        android:id="@+id/button"
        android:background="#F79730"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combinarlo como\nquiero"
        android:id="@+id/button2"
        android:background="#F79730"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/imageView4"
        android:textSize="18dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>
