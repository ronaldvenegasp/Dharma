<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.personal.dharma.MainActivity"
    android:theme="@style/AppTheme"
    android:background="#FCCFA8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#F8A955"
        android:padding="25dp"
        android:layout_alignTop="@+id/transicion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:password="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textAlignment="center"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#F79730"
        android:padding="25dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:elegantTextHeight="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:src="@drawable/pantalla_inicial"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boton_ayuda"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:scaleType="center"
        android:src="@drawable/boton_ayuda" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/transicion"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
