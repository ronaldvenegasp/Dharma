<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.personal.dharma.NumeroMesa"
    android:background="#FCCFA8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/mensaje_mesa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Digite el número de la\n mesa"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ó"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Escanee el número de\nla mesa"
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_gravity="right"
            android:layout_marginTop="-50dp" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numeroMesa"
            android:gravity="center"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginTop="0dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesa_boton_camara"
            android:layout_marginEnd="55dp"
            android:layout_alignBottom="@+id/mesa_boton_siguiente"
            android:layout_toStartOf="@+id/boton_ayuda"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="#FCCFA8"
            android:src="@drawable/cam" />

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:id="@+id/mesa_boton_siguiente"
            android:textSize="18dp"
            android:onClick="setTableNumber"
            android:layout_below="@+id/numeroMesa"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/numeroMesa"
            android:background="#F79730"
            android:layout_marginTop="-50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_ayuda"
            android:src="@drawable/boton_ayuda"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/scrollView"
            android:layout_marginTop="25dp" />

    </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#F8A955"
        android:padding="25dp"
        android:layout_alignTop="@+id/transicion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:password="false"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="¿EN QUÉ MESA \nSE ENCUENTRA?"
        android:textAlignment="center"
        android:textSize="40dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="#F79730" />

</RelativeLayout>
